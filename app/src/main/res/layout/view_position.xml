<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- Avatar Circle -->
        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/circle_background"
                app:tint="#10B981"/>

            <TextView
                android:id="@+id/tv_avatar_initial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>
        </FrameLayout>

        <!-- Friend Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tv_pseudo_view_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#064E3B"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#047857"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tv_numero_view_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+123456789"
                    android:textSize="13sp"
                    android:textColor="#047857"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_dialog_map"
                    app:tint="#059669"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tv_coordinates_view_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36.8065, 10.1815"
                    android:textSize="11sp"
                    android:textColor="#059669"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="end">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_track_view_position"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#10B981"/>

                <ImageView
                    android:id="@+id/icon_show_map_view_position"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp"
                    app:tint="#14B8A6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/icon_call_view_position"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_call"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:tint="#6EE7B7"/>

                <ImageView
                    android:id="@+id/icon_edit_view_position"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_edit"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp"
                    app:tint="#059669"/>

                <ImageView
                    android:id="@+id/icon_delete_view_position"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@android:drawable/ic_menu_delete"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="4dp"
                    app:tint="#DC2626"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
