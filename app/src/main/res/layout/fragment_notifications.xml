<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDF4"
    tools:context=".ui.notifications.NotificationsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header with Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_dialog_map"
                app:tint="#10B981"
                android:padding="16dp"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/tv_add_loaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update Friend Location"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#064E3B"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update your friend's nickname"
                android:textSize="14sp"
                android:textColor="#047857"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Input Fields Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Friend's Nickname"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="#10B981"
                    app:boxStrokeColor="#10B981"
                    app:hintTextColor="#059669"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_pseudo_add_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="#064E3B"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:startIconTint="#10B981"
                    app:boxStrokeColor="#10B981"
                    app:hintTextColor="#059669"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_numero_add_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="#064E3B"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Add Button -->
        <Button
            android:id="@+id/btn_add_location"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Update Location"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#10B981"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"/>

        <!-- Help Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ The system will automatically find the location using the phone number"
            android:textSize="12sp"
            android:textColor="#059669"
            android:gravity="center"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>