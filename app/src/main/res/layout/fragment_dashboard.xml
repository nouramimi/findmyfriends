<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0FDF4"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="#10B981"
                android:padding="16dp"
                android:background="@drawable/circle_background"/>

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request Location"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#064E3B"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send SMS to get friend's location"
                android:textSize="14sp"
                android:textColor="#047857"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- SMS Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“± Enter Phone Number"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#047857"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    app:startIconDrawable="@android:drawable/ic_menu_call"
                    app:startIconTint="#10B981"
                    app:endIconMode="clear_text"
                    app:boxStrokeColor="#10B981"
                    app:hintTextColor="#059669"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtel_dashboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:textColor="#064E3B"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Send Button -->
        <Button
            android:id="@+id/sendSMSBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Send Location Request"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#10B981"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_menu_send"
            app:iconGravity="textStart"/>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#D1FAE5"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ How it works"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#065F46"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Enter your friend's phone number\n2. Tap 'Send Location Request'\n3. They'll receive an SMS requesting their location\n4. Once shared, you can track them from Home"
                    android:textSize="13sp"
                    android:textColor="#047857"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
