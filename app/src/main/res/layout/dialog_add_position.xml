<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nouvelle Position"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#064E3B"
        android:layout_marginBottom="16dp"/>

    <!-- Pseudo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pseudo"
        android:textSize="14sp"
        android:textColor="#374151"/>

    <EditText
        android:id="@+id/ed_pseudo_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"
        android:hint="Entrez le pseudo"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"/>

    <!-- Numero -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro de téléphone"
        android:textSize="14sp"
        android:textColor="#374151"/>

    <EditText
        android:id="@+id/ed_numero_add"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="phone"
        android:hint="Entrez le numéro"
        android:padding="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:drawable/edit_text"/>

    <!-- Coordinates Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordonnées (auto-remplies)"
        android:textSize="12sp"
        android:textColor="#6B7280"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <!-- Latitude -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude"
                android:textSize="12sp"
                android:textColor="#374151"/>

            <EditText
                android:id="@+id/ed_latitude_add"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal|numberSigned"
                android:padding="12dp"
                android:enabled="false"
                android:background="@android:drawable/edit_text"/>
        </LinearLayout>

        <!-- Longitude -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude"
                android:textSize="12sp"
                android:textColor="#374151"/>

            <EditText
                android:id="@+id/ed_longitude_add"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="numberDecimal|numberSigned"
                android:padding="12dp"
                android:enabled="false"
                android:background="@android:drawable/edit_text"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_annuler_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Annuler"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="#6B7280"/>

        <Button
            android:id="@+id/btn_valider_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter"
            android:backgroundTint="#10B981"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>